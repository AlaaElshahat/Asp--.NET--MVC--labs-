@model IEnumerable<Students>
@{
    ViewData["Title"] = "StdList";
}


<table class="table table-bordered alert-info  align-content-stretch" style="margin:20px">
    <thead>
    <th> Student ID</th>
    <th> Student Name</th>
    <th>Student Image</th>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><img src="/images/@item.Image" /></td>
                    
                </tr>
            }
        }
        else
        {
            <tr colspan="4">
                <td>There is No User</td>
            </tr>
        }
    </tbody>
</table>

