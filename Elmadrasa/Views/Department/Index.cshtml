@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<section class="vh-100 bg-image"
         style="background-image: url('https://thumbs.dreamstime.com/z/business-person-working-office-desk-wearing-smart-watch-hand-phone-notebook-tablet-various-supplies-around-70518800.jpg');">
<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <table class="table table-bordered alert-info  align-content-stretch" style="margin:20px">
                            <thead>
                            <th>Department ID</th>
                            <th>Department Name</th>
                            <th>Department Capacity</th>
                            <th>Courses</th>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@item.Capacity</td>
                                            <td>

                                                <a asp-action="UpdateCouursesList" asp-route-id="@item.Id" class="btn btn-outline-danger">CoursesList</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr colspan="4">
                                        <td>There is No Department</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>

